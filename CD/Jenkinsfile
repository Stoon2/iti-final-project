pipeline {

  options {
    ansiColor('xterm')
  }

  agent {
    kubernetes {
      yamlFile 'CI/builder.yaml'
    }
  }

  stages {
    stage('Deploy App to Kubernetes') {   
      steps {
        container('kubectl') {
          withCredentials([file(credentialsId: 'mykubeconfig', variable: 'KUBECONFIG')]) {
            sh 'kubectl apply -f k8s/'
          }
        }
      }
    }
  
  }
}